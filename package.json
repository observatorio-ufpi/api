{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate && prisma generate --schema=./prisma/educacao/schema.educacao.prisma",
    "prisma:generate:main": "prisma generate",
    "prisma:generate:educacao": "prisma generate --schema=./prisma/educacao/schema.educacao.prisma",
    "prisma:migrate:main": "prisma migrate deploy",
    "prisma:migrate:educacao": "prisma migrate deploy --schema=./prisma/educacao/schema.educacao.prisma",
    "prisma:migrate:all": "prisma migrate deploy && prisma migrate deploy --schema=./prisma/educacao/schema.educacao.prisma",
    "prisma:studio:main": "prisma studio",
    "prisma:studio:educacao": "prisma studio --schema=./prisma/educacao/schema.educacao.prisma",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down && docker-compose up -d",
    "restore:educacao": "docker cp backups/backup-educacao.sql educacao_container:/tmp/ && docker exec educacao_container sh -c \"tail -c +4 /tmp/backup-educacao.sql > /tmp/backup_clean.sql && iconv -f UTF-16LE -t UTF-8 /tmp/backup_clean.sql > /tmp/backup_utf8.sql\" && docker exec educacao_container psql -U root -d educacao-database -f /tmp/backup_utf8.sql",
    "reset:educacao": "docker exec educacao_container psql -U root -d educacao-database -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public; GRANT ALL ON SCHEMA public TO root; GRANT ALL ON SCHEMA public TO public;\"",
    "restore:educacao:clean": "npm run reset:educacao && npm run restore:educacao",
    "restore:main": "docker exec -i observatorio_container psql -U root -d observatorio-database < backups/backup-main.sql",
    "backup:educacao": "docker exec educacao_container pg_dump -U root -d educacao-database > backup-educacao_$(date +%Y%m%d_%H%M%S).sql",
    "backup:main": "docker exec observatorio_container pg_dump -U root -d observatorio-database > backup-main_$(date +%Y%m%d_%H%M%S).sql"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts",
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.0",
    "@prisma/client": "5.11.0",
    "axios": "^1.6.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "csv-parser": "^3.2.0",
    "exceljs": "^4.4.0",
    "p-limit": "^6.2.0",
    "pnpm": "^10.15.0",
    "prisma": "^5.10.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapping": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "setupFilesAfterEnv": ["<rootDir>/../test/jest.setup.ts"]
  }
}
